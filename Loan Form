input[type="reset"] {
    padding: 8px 20px;
    margin-top: 15px;
    margin-right: 10px;
    border: 1px solid #000;
    background-color: #eaeaea;
    font-weight: bold;
    cursor: pointer;
}

input[type="submit"]:hover,
input[type="reset"]:hover {
    background-color: #d5d5d5;
}

/* Small screen support */
