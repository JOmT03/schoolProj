/* Page background */
body {
    background: linear-gradient(135deg, #1e3a8a, #2563eb);
    font-family: Arial, Helvetica, sans-serif;
}

/* Glass card form */
form {
    width: 650px;
    margin: 40px auto;
    padding: 30px;
    background: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 25px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
}

/* Title */
h1 {
    text-align: center;
    color: #ffffff;
    margin-bottom: 25px;
}

/* Labels */
label {
    color: #ffffff;
    font-weight: bold;
}

/* Pill-shaped inputs */
input[type="text"],
input[type="number"],
input[type="date"],
input[type="file"],
select,
textarea {
    width: 60%;
    padding: 10px 16px;
    border-radius: 50px;
    border: none;
    outline: none;
    margin-bottom: 12px;
    font-size: 14px;
}

/* Textarea adjustment */
textarea {
    border-radius: 20px;
    resize: none;
}

/* Focus effect */
input:focus,
select:focus,
textarea:focus {
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.6);
}

/* Custom rounded radio buttons */
input[type="radio"] {
    appearance: none;
    -webkit-appearance: none;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 2px solid #ffffff;
    margin-right: 6px;
    cursor: pointer;
    position: relative;
}

input[type="radio"]:checked {
    background-color: #3b82f6;
    border-color: #3b82f6;
}

/* Buttons */
input[type="submit"],
input[type="reset"] {
    padding: 10px 28px;
    border-radius: 50px;
    border: none;
    background: linear-gradient(to right, #3b82f6, #2563eb);
    color: white;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

/* Button hover */
input[type="submit"]:hover,
input[type="reset"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.4);
}

/* Mobile support */
@media (max-width: 700px) {
    form {
        width: 90%;
    }

    input,
    select,
    textarea {
        width: 100%;
    }
}
